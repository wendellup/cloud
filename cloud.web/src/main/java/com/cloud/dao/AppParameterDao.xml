	<select id="getAppParameterById"
		parameterType="int" resultType="com.cloud.valueobject.entity.AppParameter">
		select * from t_parameter_app where id=#{id}
	</select>

	<select id="listAppParameterByParentId"
		parameterType="int" resultMap="AppParameterResult">
		select * from t_parameter_app where parent_id=#{parentId} order by sort
	</select>

